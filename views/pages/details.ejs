<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../partials/header") %>
</head>
<body class="bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 text-gray-100 min-h-screen flex items-center justify-center">
  <div class="container mx-auto p-5">
    <div class="max-w-3xl mx-auto bg-white/30 backdrop-blur-lg shadow-lg border border-gray-300 rounded-lg p-8 transition-transform transform hover:scale-105">

      <!-- Pokémon Name -->
      <h1 class="text-4xl font-extrabold text-center mb-5 capitalize text-white drop-shadow-lg">
        <%= pokemon.name %>
      </h1>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 items-center">
        <!-- Left: Pokémon Image -->
        <div class="flex justify-center">
          <img
            src="<%= pokemon.sprites.other['official-artwork'].front_default %>"
            alt="<%= pokemon.name %>"
            class="w-60 h-60 object-contain border-4 border-white shadow-xl rounded-full transition-all duration-300 hover:rotate-3"
          />
        </div>

        <!-- Right: Pokémon Info -->
        <div class="space-y-4 bg-white/20 p-5 rounded-lg shadow-lg">
          <p class="text-lg font-semibold border-b pb-2 text-white">
            <span class="text-black-300">Height:</span> <%= pokemon.height %>
          </p>
          <p class="text-lg font-semibold border-b pb-2 text-white">
            <span class="text-black-300">Weight:</span> <%= pokemon.weight %>
          </p>
          <p class="text-lg font-semibold border-b pb-2 text-white">
            <span class="text-black-300">Type:</span> <%= pokemon.types.map(t => t.type.name).join(', ') %>
          </p>
          <p class="text-lg font-semibold border-b pb-2 text-white">
            <span class="text-black-300">Abilities:</span> <%= pokemon.abilities.map(a => a.ability.name).join(', ') %>
          </p>
        </div>
      </div>

      <!-- Base Stats -->
      <div class="mt-6 p-5 bg-white/20 rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold text-center text-white mb-4">Base Stats</h2>
        <div class="grid grid-cols-2 gap-4">
          <% pokemon.stats.forEach(stat => { %>
            <div class="bg-white/30 p-3 rounded-lg text-center text-white font-semibold">
              <span class="text-black-300"><%= stat.stat.name.replace('-', ' ') %>:</span>
              <%= stat.base_stat %>
            </div>
          <% }) %>
        </div>
      </div>

      <!-- Back Button -->
      <div class="text-center mt-6">
        <a href="/" class="px-6 py-3 bg-white/30 text-white font-bold rounded-lg hover:bg-white/40 transition-all duration-300">
          ⬅ Back to Pokédex
        </a>
      </div>

    </div>
  </div>
  <%- include("../partials/footer") %>
</body>
</html>
